{
  "name"    : "CanvasCell",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "canvascell",
    "APPLICATION_MAIN_CLASS" : "${APPLICATION}.demo.Demo",
    "QOOXDOO_PATH" : "../../qooxdoo/5.0",
    "QXTHEME"      : "qx.theme.Modern",
    "API_EXCLUDE"  : ["qx.*", "canvascell.demo.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : "."
  }
}
